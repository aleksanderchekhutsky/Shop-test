@model Order
<div class="row">
    <h3>Ordering </h3>
    <form asp-action="Checkout" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="col-md-5">
                <input asp-for="Name" class="form-controller"/>
                <span asp-validation-for="Name"class-"text-danger"></span>

            </div>
        </div>
         <div class="form-group">

            <label asp-for="Surname"></label>
            <div class="col-md-5">

                <input asp-for="Surname" class="form-controller"/>
                <span asp-validation-for="Surname" class-"text-danger"></span>
            </div>
        </div>
         <div class="form-group">
            <label asp-for="Adress"></label>
            <div class="col-md-5">
                <input asp-for="Adress" class="form-controller"/>
                <span asp-validation-for="Adress" class-"text-danger"></span>
            </div>
        </div>
         <div class="form-group">
            <label asp-for="Phone"></label>
            <div class="col-md-5">
                <input asp-for="Phone" class="form-controller"/>
                <span asp-validation-for="Phone" class-"text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="col-md-5">
                <input asp-for="Email" class="form-controller"/>
                <span asp-validation-for="Email" class-"text-danger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="End Order" />
    </form>

</div>