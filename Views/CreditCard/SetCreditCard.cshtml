@model CreditCard;
<div class="row">
    <h3>Ordering </h3>
    <form asp-action="SetCreditCard" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="CardNumber"></label>
            <div class="col-md-5">
                <input asp-for="CardNumber" class="form-controller"/>
                <span asp-validation-for="CardNumber"class-"text-danger"></span>
            </div>
        </div>
         <div class="form-group">

            <label asp-for="Expiration"></label>
            <div class="col-md-5">

                <input asp-for="Expiration" class="form-controller"/>
                <span asp-validation-for="Expiration" class-"text-danger"></span>
            </div>
        </div>
         <div class="form-group">
            <label asp-for="CVV"></label>
            <div class="col-md-5">
                <input asp-for="CVV" class="form-controller"/>
                <span asp-validation-for="CVV" class-"text-danger"></span>
            </div>
        </div>
         <div class="form-group">
            <label asp-for="CardName"></label>
            <div class="col-md-5">
                <input asp-for="CardName" class="form-controller"/>
                <span asp-validation-for="CardName" class-"text-danger"></span>
            </div>
        </div>
       
        <input class="btn btn-success" type="submit" value="submit" />
    </form>

</div>